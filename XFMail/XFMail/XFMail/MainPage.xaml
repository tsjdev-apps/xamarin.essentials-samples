<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFMail.MainPage"
             Title="Mail"
             Padding="16"
             Visual="Material">

    <StackLayout>
        <Entry x:Name="ToEntry"
               Placeholder="To"
               Keyboard="Email" />
        <Entry x:Name="CcEntry"
               Placeholder="CC"
               Keyboard="Email" />
        <Entry x:Name="BccEntry"
               Placeholder="BCC"
               Keyboard="Email" />
        <Entry x:Name="SubjectEntry"
               Placeholder="Subject"
               Keyboard="Text" />
        <Entry x:Name="BodyEntry"
               Placeholder="Body"
               Keyboard="Text" />
        <Button Text="Send Mail"
                Clicked="SendMailButtonOnClicked" />
    </StackLayout>

</ContentPage>
