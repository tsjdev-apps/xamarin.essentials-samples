<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFClipboard.MainPage"
             Title="Clipboard"
             Visual="Material"
             Padding="16">

    <StackLayout>
        <Entry x:Name="ClipboardEntry"
               Placeholder="Enter text..." />
        <Button Text="Set Clipboard"
                Clicked="SetClipboardButtonOnClicked" />
        <Button Text="Get Clipboard"
                Clicked="GetClipboardButtonOnClicked" />
        <Label x:Name="ClipboardLabel" />
    </StackLayout>

</ContentPage>
