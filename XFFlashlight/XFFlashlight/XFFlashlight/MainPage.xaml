<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFFlashlight.MainPage"
             Title="Flashlight Demo"
             Visual="Material"
             Padding="16">

    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="FlashlightOnButton"
                    Text="Flashlight: On"
                    Clicked="FlashlightOnButtonOnClicked" />

            <Button x:Name="FlashlightOffButton"
                    Text="Flashlight: Off"
                    IsEnabled="False"
                    Clicked="FlashlightOffButtonOnClicked" />
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
